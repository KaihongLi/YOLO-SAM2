{
  "name": "YOLO_SAM2",
  "n_gpu": 1,
  "arch": {
    "yolo": "yolov8",
    "yolo_weights": "yolo/yolov8/ImageNet_VID/yolov8m_ImageNet_VID.pt",
    "sam": "sam2",
    "sam_config": "configs/sam2.1/sam2.1_hiera_l.yaml",
    "sam_weights": "sam2/checkpoints/sam2.1_hiera_large.pt"
